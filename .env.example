# eBay API Environment
# Options: sandbox, production
EBAY_ENVIRONMENT=sandbox

# eBay Sandbox Credentials
# Get these from: https://developer.ebay.com/my/keys
EBAY_SANDBOX_APP_ID=
EBAY_SANDBOX_CERT_ID=
EBAY_SANDBOX_DEV_ID=
EBAY_SANDBOX_RUNAME=

# eBay Production Credentials
EBAY_PRODUCTION_APP_ID=
EBAY_PRODUCTION_CERT_ID=
EBAY_PRODUCTION_DEV_ID=
EBAY_PRODUCTION_RUNAME=

# Default eBay Site
# Options: US, UK, DE, FR, AU, CA, etc.
EBAY_DEFAULT_SITE=US

# Token Storage
# Options: database, cache, file
EBAY_TOKEN_STORAGE=database

# Cache Settings
EBAY_CACHE_ENABLED=true
EBAY_CACHE_TTL=3600

# Logging
EBAY_LOGGING_ENABLED=false
EBAY_LOG_CHANNEL=stack
